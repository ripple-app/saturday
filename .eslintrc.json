{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "MemberExpression": 1
            }
        ],
        "no-trailing-spaces": 2,
        "eol-last": [
            "error",
            "always"
        ],
        "space-in-parens": [
            "error",
            "never"
        ],
        "no-multiple-empty-lines": 1,
        "prefer-const": "error",
        "space-infix-ops": "error",
        "no-useless-escape": "off",
        "no-console": "off",
        "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": false }]
    },
    "overrides": [
        {
            "files": [
                "src/**/*.js"
            ]
        }
    ]
}